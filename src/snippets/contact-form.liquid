{% form 'contact', class: 'o-form' %}
  {% if form.posted_successfully? %}
    <p class="form-success">
      {{ 'contact.form.post_success' | t }}
    </p>
  {% endif %}

  {{ form.errors | default_errors }}

  {%- comment -%} Name {%- endcomment -%}
  <div class="o-form__input-group">
    <label for="contact[name]" class="o-form__label">
      {{- 'contact.form.name' | t -}}
    </label>

    <input
      type="text"
      name="contact[name]"
      placeholder="{{ 'contact.form.name' | t }}"
      value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}"
      class="o-input is-large is-block"
    />
  </div>

  {%- comment -%} Email {%- endcomment -%}
  <div class="o-form__input-group">
    <label for="contact[email]" class="o-form__label">
      {{- 'contact.form.email' | t -}}
    </label>

    <input
      type="email"
      name="contact[email]"
      placeholder="{{ 'contact.form.email' | t }}"
      value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
      spellcheck="false"
      autocomplete="off"
      autocapitalize="off"
      class="o-input is-large is-block"
    />
  </div>

  {%- comment -%} Message {%- endcomment -%}
  <div class="o-form__input-group">
    <label for="contact[body]" class="o-form__label">
      {{- 'contact.form.message' | t -}}
    </label>
    <textarea
      class="o-input is-large is-block"
      rows="10"
      name="contact[body]"
      placeholder="{{ 'contact.form.message' | t }}"
    >
      {%- if form.body -%}
        {{- form.body -}}
      {%- endif -%}
    </textarea>
  </div>

  <button type="submit" class="o-btn is-large is-wide is-secondary">
    {{- 'contact.form.send' | t -}}
  </button>
{% endform %}
