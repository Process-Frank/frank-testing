{%- comment -%}
  Review Carousel Slide

  Params:
    rating - Out of 5
    author - Author
    quote - Review Quote

  Version:
    1.0.0 - 2019/02/06
{%- endcomment -%}

<div class="c-reviews-carousel__review" itemprop="review" itemscope itemtype="http://schema.org/Review">
  <div class="c-reviews-carousel__review-stars" itemprop="reviewRating" itemscope itemtype="http://schema.org/Rating">
    <meta itemprop="worstRating" content="0" />
    <meta itemprop="bestRating" content="5" />
    <meta itemprop="ratingValue" content="{{ rating }}" />

    {%- for x in (1..5) -%}
      {%- capture clazz -%}
        c-reviews-carousel__review-stars-star{% if x <= rating %} is-gold{% endif -%}
      {%- endcapture -%}

      {%- include 'object.icon' with {
        icon: 'star',
        class: clazz
      } -%}
    {%- endfor -%}
  </div>

  <p class="c-reviews-carousel__review-description" itemprop="description">
    {{- quote -}}
  </p>

  <p class="c-reviews-carousel__review-author" itemprop="author">
    {{- author -}}
  </p>
</div>
