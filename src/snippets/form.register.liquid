{% comment %}
  Register Form
    Simple Register Form

  Dependencies:
    styles/objects/_form.scss
    styles/objects/_buttons.scss

  Version:
    1.0.0 - 2018/02/21

{% endcomment %}
<div class="c-register-form">
  <h3 class="c-register-form__title o-heading is-size-2" ><span class="o-underlined--dark o-underlined--small">{{'customer.register.title' | t}}</span></h3>
  <p class="c-register-form__description"><span>{{'customer.register.pretitle' | t }}</span></p>

  {%-form 'create_customer'-%}
    
    <div class="create_customer__name">
      {% comment %}First Name{% endcomment %}
      {%-assign input_name = 'first_name'-%}
      <div class="o-form__group {%if form.errors contains input_name%}has-error{%endif%}">
        <!-- <label class="c-login-form__form__label" for="customer[{{ input_name }}]">
          {{ 'customer.register.' | append: input_name | t }}
        </label> -->
        <input
          type="text"
          placeholder="{{'customer.register.' | append: input_name | t}}"
          name="customer[{{ input_name }}]"
          class="
            o-input
            o-form__text
            {%if form.errors contains input_name%}has-error{%endif%}
          "
          value="{%if form[input_name]%}{{ form[input_name] }}{%endif%}"
          required
          spellcheck="false"
        />
      </div>


      {% comment %}Last Name{% endcomment %}
      {%-assign input_name = 'last_name'-%}
      <div class="o-form__group {%if form.errors contains input_name%}has-error{%endif%}">
        <!-- <label class="c-login-form__form__label" for="customer[{{ input_name }}]">
          {{ 'customer.register.' | append: input_name | t }}
        </label> -->
        <input
          type="text"
          placeholder="{{'customer.register.' | append: input_name | t}}"
          name="customer[{{ input_name }}]"
          class="
            o-input
            o-form__text
            {%if form.errors contains input_name%}has-error{%endif%}
          "
          value="{%if form[input_name]%}{{ form[input_name] }}{%endif%}"
          required
          spellcheck="false"
        />
      </div>
    </div>


    {% comment %}Email{% endcomment %}
    {%-assign input_name = 'email'-%}
    <div class="o-form__group {%if form.errors contains input_name%}has-error{%endif%}">
      <!-- <label class="c-login-form__form__label" for="customer[{{ input_name }}]">
        {{ 'customer.register.' | append: input_name | t }}
      </label> -->
      <input
        type="email"
        placeholder="{{'customer.register.' | append: input_name | t}}"
        name="customer[{{ input_name }}]"
        class="
          o-input
          o-form__text
          {%if form.errors contains input_name%}has-error{%endif%}
        "
        value="{%if form[input_name]%}{{ form[input_name] }}{%endif%}"
        required
        spellcheck="false"
        autocomplete="off"
        autocapitalize=-"off"
      />
    </div>


    <div class="create_customer__password">
      {% comment %}Password{% endcomment %}
      {%-assign input_name = 'password'-%}
      <div class="o-form__group {%if form.errors contains input_name%}has-error{%endif%}">
        <!-- <label class="c-login-form__form__label" for="customer[{{ input_name }}]">
          {{ 'customer.register.' | append: input_name | t }}
        </label> -->
        <input
          data-first-password
          type="password"
          placeholder="{{'customer.register.' | append: input_name | t}}"
          name="customer[{{ input_name }}]"
          class="
            o-input
            o-form__text
            {%if form.errors contains input_name%}has-error{%endif%}
          "
          value="{%if form[input_name]%}{{ form[input_name] }}{%endif%}"
          required
          spellcheck="false"
          autocomplete="off"
          autocapitalize="off"
        />
      </div>

      {% comment %}Confirm Password{% endcomment %}
      {%-assign input_name = 'confirm-password'-%}
      <div class="o-form__group {%if form.errors contains input_name%}has-error{%endif%}">
        <!-- <label class="c-login-form__form__label" for="customer[{{ input_name }}]">
          {{ 'customer.register.' | append: input_name | t }}
        </label> -->
        <input data-confirm-password
          type="password"
          placeholder="{{'customer.register.' | append: input_name | t}}"
          name="customer[{{ input_name }}]"
          class="
            o-input
            o-form__text
            {%if form.errors contains input_name%}has-error{%endif%}
          "
          value="{%if form[input_name]%}{{ form[input_name] }}{%endif%}"
          required
          spellcheck="false"
          autocomplete="off"
          autocapitalize="off"
        />
      </div>
    </div>
    <p class="c-register-form__error is-hidden" data-register-error>Confirm password doesn't seem to match the password field.</p>
    <button type="submit" class="o-btn o-btn-solid is-large" data-register-submit>
      <span> {{'customer.register.submit' | t }} </span>
    </button>
  {%-endform-%}
</div>
{%-assign form = nil-%}
