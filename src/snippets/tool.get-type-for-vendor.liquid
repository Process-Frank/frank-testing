{%- comment -%}
  Returns the type for the supplied vendor

  Version:
    1.0.0 - 2019/03/07

  Params:
    vendor - String of vendor name

  Returns:
    vendorType - String of vendor type
{%- endcomment -%}
{%- assign vendorMenu = linklists['vendors'] -%}

{%- for item in vendorMenu.links -%}
  {%- assign submenu = linklists[item.handle] -%}
  {%- assign match = false -%}
  {%- for vend in submenu.links -%}
    {%- if vend.object.title != vendor -%}{% continue %}{%- endif -%}
    {%- assign match = true -%}
    {%- break -%}
  {%- endfor -%}

  {%- unless match -%}{% continue %}{%- endunless -%}
  {%- assign vendorType = item.title -%}
  {%- break -%}
{%- endfor -%}
