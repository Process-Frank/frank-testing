{% comment %}
  Social Sharing
    Simple snippet with sharing buttons for various social sites.

  Dependencies:

  Parameters:
    url - URL to be shared.
    title - Title of object being shared

  Version:
    1.0.0 - 2018/07/31
{% endcomment %}
<span class="o-social-share">
  {%- if settings.share_facebook -%}
    <a
      target="_blank"
      href="//www.facebook.com/sharer.php?u={{ shop.url | append: url }}"
      class="o-social-share__link"
    >
      {%- include 'icon-facebook' -%}
    </a>
  {%- endif -%}

  {%- if settings.share_twitter -%}
    <a
      target="_blank"
      href="//twitter.com/share?text={{ title | url_param_escape }}&amp;url={{ shop.url | append: url }}"
      class="o-social-share__link"
    >
      {%- include 'icon-twitter' -%}
    </a>
  {%- endif -%}

  {%- if settings.share_pinterest -%}
    <a
      target="_blank"
      href="//pinterest.com/pin/create/button/?url={{ shop.url | append: url }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ title | url_param_escape }}"
      class="o-social-share__link"
    >
      {%- include 'icon-pinterest' -%}
    </a>
  {%- endif -%}
</span>
