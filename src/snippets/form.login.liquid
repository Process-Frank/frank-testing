{% comment %}
  Login Form
    Simple Login Form

  Dependencies:
    styles/objects/_form.scss
    styles/objects/_buttons.scss
    styles/components/_login-form.scss
    snippets/forgot-password-form.liquid
    scripts/components/login-form.js

  Version:
    1.0.0 - 2018/02/21
{% endcomment %}
<div class="c-login-form" data-login-form >
  <h3 class="c-login-form__title o-heading is-size-2" ><span class="o-underlined--dark o-underlined--small"> {{'customer.login.title' | t }} </span></h3>
  <p class="c-login-form__description"><span>{{ 'customer.login.returning' | t }}</span></p>
  {%- form 'customer_login'-%}

    <div class="o-form__group {%if form.errors contains 'email'%}has-error{%endif%}">
      <!-- <label class="c-login-form__form__label" for="customer[email]">
        {{ 'customer.login.email' | t }}
      </label> -->
      <input
        type="email"
        placeholder="{{'customer.login.email' | t}}"
        name="customer[email]"
        class="
          o-input
          o-form__text
          {%if form.errors contains 'email'%}has-error{%endif%}
        "
        value="{%if form.email%}{{form.email}}{%endif%}"
        required
        spellcheck="false"
        autocomplete="off"
        autocapitalize=-"off"
      />
    </div>


    {%- if form.password_needed -%}
      <div class="o-form__group {%if form.errors contains 'password'%}has-error{%endif%}">
        <!-- <label class="c-login-form__form__label" for="customer[password]">
          {{ 'customer.login.password' | t }}
        </label> -->
        <input
          type="password"
          placeholder="{{'customer.login.password' | t}}"
          name="customer[password]"
          class="
            o-input
            o-form__text
            {%if form.errors contains 'password'%}has-error{%endif%}
          "
          value="{%if form.password%}{{form.password}}{%endif%}"
          required
          spellcheck="false"
          autocomplete="off"
          autocapitalize=-"off"
        />

      </div>
    {%- endif -%}

    <a href="#" class="o-form__input-subtext o-btn o-btn--transparent is-large" data-login-form-forgot-password>
        {{'customer.login.forgot_password' | t}}
    </a>
      
    <button type="submit" class="o-btn o-btn-solid is-large">
      <span>{{'customer.login.sign_in' | t}}</span>
    </button>
    

  {%-endform-%}



  {% comment %} Guest Login Form (If Allowed) {% endcomment %}
  {%- if shop.checkout.guest_login -%}
    <h2>{{ 'customer.login.guest_title' | t }}</h2>

    {%- form 'guest_login' -%}
      <button type="submit" class="o-btn o-btn-solid">
        {{ 'customer.login.guest_continue' | t }}
      </button>
    {%- endform -%}
  {%- endif -%}
</div>

{% comment %} Reset Password Form {% endcomment %}
<div class="c-login-form__reset-password is-hidden" data-registration-form >
  {%- include 'form.forget-password' -%}
</div>

