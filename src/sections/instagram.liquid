{%- comment -%}
  Instagram
    Featured instagram display section

  Version:
    2.0.0 - 2019/01/07
{%- endcomment -%}
{%- include 'instagram' with {
  token: section.settings.s-access_token,
  id: section.id,
  link: settings.social_instagram_link,
  follow: section.settings.follow
} -%}

{% schema %}
  {
    "name": "Instagram",
    "class": "c-section c-section__instagram",
    "settings": [
      {
        "type": "text",
        "id": "s-access_token",
        "label": "Instagram Access token ([?](http:\/\/instagram.pixelunion.net))",
        "info": "You will need to provide an access token for your Instagram account here."
      },
      {
        "type": "text",
        "label": "Follow label",
        "default": "Follow @yourinsta on instagram",
        "id": "follow"
      }
    ],
    "presets": [
      {
        "name": "Instagram",
        "category": "social"
      }
    ]
  }
{% endschema %}
