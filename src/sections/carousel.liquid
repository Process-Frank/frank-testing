{%- comment -%}
  Carousel
    Carousel Settings for Carousel Section.
    Provides options for selecting images, text, etc.

  Version:
    1.0.0 - 2018/09/11
{%- endcomment -%}
{%- capture blocks -%}
slide::
  title:text,
  image:image,
  something:link_list
;
video::
  video:video,
  title:text
;
{%- endcapture -%}

{%- include 'tool.json-section' with {
  name: 'Carousel',
  class: 'c-section__carousel',
  component: 'CarouselSection',

  settingTypes: 'arrows:checkbox,dots:checkbox,loop:checkbox,autoplay:checkbox',
  blocks: blocks
} -%}

{% schema %}
  {
    "name": "Carousel",
    "class": "c-section__carousel",

    "settings": [
      {
        "type": "text",
        "id": "test",
        "label": "Test",
        "default": "lorem ipsum"
      },
      {
        "type": "header",
        "content": "Carousel Settings"
      },
      {
        "type": "checkbox",
        "id": "arrows",
        "label": "Show Arrows",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "dots",
        "label": "Show Dots",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "loop",
        "label": "Loop Slides",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "autoplay",
        "label": "Auto Scroll Slides",
        "default": true
      }
    ],

    "blocks": [

      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Hello World"
          },
          {
            "type": "link_list",
            "id": "something",
            "label": "test",
            "default": "main-menu"
          }
        ]
      }

    ],


    "presets": [
      {
        "name": "Carousel",
        "category": "Layout",
        "blocks": [
        ]
      }
    ]
  }
{% endschema %}
