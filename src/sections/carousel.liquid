{%- comment -%}
  Carousel
    Carousel Settings for Carousel Section.
    Provides options for selecting images, text, etc.

  Version:
    1.0.0 - 2018/09/11
{%- endcomment -%}
{%- capture blocks -%}
  slide::
    imageMobile:image_picker,
    contentPosition:select,
    textAlign:select,
    buttonUrl:url,
    buttonText:text,
    titleColor:color
    subtitleColor:color

{%- endcapture -%}

{%- include 'tool.json-section' with {
  name: 'Carousel',
  class: 'c-section__carousel',
  component: 'CarouselSection',

  settingTypes: 'arrows:checkbox,dots:checkbox,loop:checkbox,autoplay:checkbox',
  blocks: blocks
} -%}

{% schema %}
  {
    "name": "Carousel",
    "class": "c-section__carousel",

    "settings": [
      {
        "type": "text",
        "id": "test",
        "label": "Test",
        "default": "lorem ipsum"
      },
      {
        "type": "header",
        "content": "Carousel Settings"
      },
      {
        "type": "checkbox",
        "id": "arrows",
        "label": "Show Arrows",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "dots",
        "label": "Show Dots",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "loop",
        "label": "Loop Slides",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "autoplay",
        "label": "Auto Scroll Slides",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "autoheight",
        "label": "Auto carousel height",
        "default": true,
        "info": "When checked the carousel will auto resize to match the image height."
      }
    ],

    "blocks": [

      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "header",
            "content": "Image Settings"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "We recommend a 3000x1500 JPEG Image of no more than 10MB. For optimization tips read [this guide](//lucid.nz/blogs/blog/how-to-best-optimise-your-images-for-shopify)"
          },
          {
            "type": "image_picker",
            "id": "imageMobile",
            "label": "Mobile Specific Image",
            "info": "This image will only show on mobile screens."
          },


          {
            "type": "header",
            "content": "Content Settings"
          },
          {
            "type": "select",
            "id": "contentPosition",
            "label": "Content Position",
            "options": [
              {"value": "left top", "label": "Top Left"},
              {"value": "center top", "label": "Top Middle"},
              {"value": "right top", "label": "Top Right"},
              {"value": "left middle", "label": "Middle Left"},
              {"value": "center middle", "label": "Center"},
              {"value": "right middle", "label": "Middle Right"},
              {"value": "left bottom", "label": "Bottom Left"},
              {"value": "center bottom", "label": "Bottom Middle"},
              {"value": "right bottom", "label": "Bottom Right"}
            ],
            "default": "center middle"
          },
          {
            "type": "select",
            "id": "textAlign",
            "label": "Text Align",
            "options": [
              {"value": "left", "label": "Left"},
              {"value": "center","label": "Center"},
              {"value": "right","label":"Right"}
            ],
            "default": "center"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Hello World"
          },
          {
            "type": "textarea",
            "id": "subtitle",
            "label": "Subtitle",
            "default": "Lorem ipsum dolor sit amet"
          },

          {
            "type": "header",
            "content": "Button Settings"
          },
          {
            "type": "text",
            "id": "buttonText",
            "label": "Button Text",
            "default": "Shop Now"
          },
          {
            "type": "url",
            "id": "buttonUrl",
            "label": "Button URL",
            "default": "/collections/all"
          },

          {
            "type": "header",
            "content": "Colour Settings"
          },
          {
            "type": "color",
            "label": "Title Colour",
            "default": "#000",
            "id": "titleColor"
          },
          {
            "type": "color",
            "label": "Subtitle Colour",
            "default": "#666",
            "id": "subtitleColor"
          }
        ]
      }

    ],


    "presets": [
      {
        "name": "Carousel",
        "category": "Layout",
        "blocks": [
        ]
      }
    ]
  }
{% endschema %}
