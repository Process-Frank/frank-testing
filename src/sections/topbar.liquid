{%- include 'tool.json-section' with {
  name: 'Top Bar',
  class: 'c-section__topbar',
  component: 'TopBar',
  group: 'topbar',
  sectionSettings: 'link,title',
  sectionSettingTypes: 'url,text'
} -%}

{% schema %}
  {
    "name": "Top Bar",
    "class": "c-section__topbar",
    "settings": [
      {
        "type": "url",
        "id": "link",
        "label": "Topbar Link"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Topbar Label",
        "default": "Lorem Ipsum Dolor!"
      }
    ]
  }
{% endschema %}
