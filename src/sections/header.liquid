  {
    "name": "Header",
    "class": "c-section__header",
    "settings": [
      {
        "type": "header",
        "content": "Menu Settings"
      },
      {
        "type": "link_list",
        "id": "menu",
        "label": "Menu",
        "default": "main-menu"
      }
    ]
  }
{% endschema %}
